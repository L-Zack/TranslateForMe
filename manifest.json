{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "Translate for Me",
    "description": "Tradutor para navegador",
    "author": "Lucas Zacarias",
    "permissions": ["storage"],
    "action": {
        "default_title": "Translate for me",
        "default_popup": "index.html"
    },
    "default_icon": {
        "16": "./img/icon16.png",
        "32": "./img/icon32.png",
        "48": "./img/icon48.png",
        "128": "./img/icon128.png"
    },
    "icons": {
        "16": "./img/icon16.png",
        "32": "./img/icon32.png",
        "48": "./img/icon48.png",
        "128": "./img/icon128.png"
    }
}